{% extends 'base.html.twig' %}

{% block body %}
	<br>
	<br>
	<br>
	<br>
		<script src="/jquery-3.2.1.min.js" type="text/javascript"></script>

	<h3>Le sugerimos lo siguiente:</h3>
	<ol class="round">
		<li class="one">
			<h5>Vista parcial de Clientes</h5>
			<button type="button" id="btnClientes">Vista de Clientes</button>
			<div id="detalleClientes" style="display: none">1</div>
		</li>

		<li class="two">
			<h5>Vista parcial de Doctores</h5>
			<button type="button" id="btnDoctores">Vista de Doctores</button>
			<div id="detalleDoctores" style="display: none">1</div>
		</li>

			<li class="two">
			<h5>Vista parcial de Empleados</h5>
			<button type="button" id="btnEmpleados">Vista de Empleados</button>
			<div id="detalleEmpleados" style="display: none">1</div>
		</li>
	</ol>

	<script>

		$(document).ready(function () {
			$("#btnClientes").click(function () {
				$("#detalleClientes").toggle("slow");
				$("#detalleClientes").load("{{ path('ajaxGetClientes') }}");
			});
			$("#btnDoctores").click(function () {
				$("#detalleDoctores").toggle("slow");
				$("#detalleDoctores").load("{{ path('ajaxGetDoctores') }}");
			});
			$("#btnEmpleados").click(function () {
				$("#detalleEmpleados").toggle("slow");
				$("#detalleEmpleados").load("{{ path('ajaxGetEmpleados') }}");
			});
			
		});
	</script>

{% endblock %}

